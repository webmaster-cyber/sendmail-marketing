---
import Layout from '../layouts/Layout.astro'
import fs from 'node:fs'
import path from 'node:path'

const settings = {
  appUrl: import.meta.env.PUBLIC_APP_URL || 'https://app.sendmail.co.zw',
  signupId: import.meta.env.PUBLIC_SIGNUP_ID || '',
}

// Load features from CMS (for hero grid)
const featuresDir = path.join(process.cwd(), 'src/content/features')
const featureFiles = fs.readdirSync(featuresDir).filter(f => f.endsWith('.json'))
const cmsFeatures = featureFiles
  .map(f => JSON.parse(fs.readFileSync(path.join(featuresDir, f), 'utf-8')))
  .sort((a, b) => (a.order || 0) - (b.order || 0))

// Load feature groups from CMS (for detailed sections)
const featureGroupsDir = path.join(process.cwd(), 'src/content/feature-groups')
const featureGroupFiles = fs.readdirSync(featureGroupsDir).filter(f => f.endsWith('.json'))
const featureGroups = featureGroupFiles
  .map(f => JSON.parse(fs.readFileSync(path.join(featureGroupsDir, f), 'utf-8')))
  .sort((a, b) => (a.order || 0) - (b.order || 0))

const iconPaths: Record<string, string> = {
  mail: 'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  zap: 'M13 10V3L4 14h7v7l9-11h-7z',
  users: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z',
  chart: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
  code: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4',
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  clock: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
  globe: 'M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9',
}
---

<Layout title="Features">
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-dark mb-4">Powerful features for growing businesses</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Everything you need to create, send, and optimize your email marketing campaigns.
        </p>
      </div>

      <!-- CMS Features Grid -->
      {cmsFeatures.length > 0 && (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto mb-20">
          {cmsFeatures.map((feature) => (
            <div class="bg-white rounded-xl border border-gray-100 p-6 hover:shadow-lg transition-shadow">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[feature.icon] || iconPaths.mail} />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-dark mb-2">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Detailed Feature Groups -->
  {featureGroups.map((group, groupIndex) => (
    <section class={`py-16 ${groupIndex % 2 === 1 ? 'bg-gray-50' : ''}`}>
      <div class="container">
        <h2 class="text-2xl font-bold text-dark mb-8">{group.title}</h2>
        <div class="grid md:grid-cols-3 gap-8">
          {group.features.map((feature) => (
            <div class="bg-white rounded-xl border border-gray-100 p-6 hover:shadow-lg transition-shadow">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[feature.icon] || iconPaths.mail} />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-dark mb-2">{feature.title}</h3>
              <p class="text-gray-600 text-sm">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  ))}

  <!-- CTA -->
  <section class="py-20 bg-primary">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Ready to get started?
        </h2>
        <p class="text-xl text-white/80 mb-8">
          Try all features free for 14 days. No credit card required.
        </p>
        <a href={`${settings.appUrl}/signup/${settings.signupId}`} class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-primary bg-white rounded-lg hover:bg-gray-100 transition-colors">
          Start Free Trial
        </a>
      </div>
    </div>
  </section>
</Layout>
